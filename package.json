{
  "name": "@mia-platform/console-mcp-server",
  "version": "1.1.0",
  "description": "Mia-Platform Console MCP Server",
  "main": "mcp-server/index.js",
  "bin": {
    "console-mcp-server": "mcp-server/index.js"
  },
  "files": [
    "mcp-server"
  ],
  "scripts": {
    "build": "rimraf mcp-server && tsc --build",
    "coverage": "c8 npm run test",
    "lint": "eslint --ext .ts src",
    "check:types": "tsc --noEmit",
    "local:test-client-credentials": "npm run build && npx @modelcontextprotocol/inspector@0.16.0 -e MIA_PLATFORM_CLIENT_ID=\"${MIA_PLATFORM_CLIENT_ID}\" -e MIA_PLATFORM_CLIENT_SECRET=\"${MIA_PLATFORM_CLIENT_SECRET}\" -- node mcp-server start --stdio --server-host 127.0.0.1",
    "local:test": "npm run build && npx @modelcontextprotocol/inspector@0.16.5 -- node mcp-server start --stdio --server-host 127.0.0.1",
    "start": "npm run build && node mcp-server start",
    "start:stdio": "npm run start -- --stdio",
    "test": "npm run test-base 'src/**/*.test.ts'",
    "test-base": "node --test --import tsx "
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mia-platform/console-mcp-server.git"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/mia-platform/console-mcp-server/issues"
  },
  "homepage": "https://github.com/mia-platform/console-mcp-server#readme",
  "dependencies": {
    "@mia-platform/console-types": "^0.39.0",
    "@modelcontextprotocol/sdk": "^1.17.5",
    "commander": "^14.0.0",
    "fastify": "^5.5.0",
    "lodash-es": "^4.17.21",
    "undici": "^7.15.0",
    "dotenv": "^17.2.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/js": "^9.24.0",
    "@stylistic/eslint-plugin": "^5.3.1",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.18.0",
    "c8": "^10.1.3",
    "eslint": "^9.34.0",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.42.0"
  }
}
