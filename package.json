{
  "name": "console-mcp-server",
  "version": "1.0.0",
  "description": "Mia-Platform Console MCP Server",
  "main": "mcp-server/index.js",
  "files": [
    "mcp-server"
  ],
  "scripts": {
    "build": "rimraf mcp-server && tsc --build",
    "coverage": "c8 npm run test",
    "lint": "eslint --ext .ts src",
    "local:test": "npm run build && npx @modelcontextprotocol/inspector@0.12.0 -e MIA_PLATFORM_CLIENT_ID=\"${MIA_PLATFORM_CLIENT_ID}\" -e MIA_PLATFORM_CLIENT_SECRET=\"${MIA_PLATFORM_CLIENT_SECRET}\" -- node mcp-server start --stdio",
    "start": "npm run build && node mcp-server start",
    "start:stdio": "npm run start -- --stdio",
    "test": "NODE_ENV=test node --test --import tsx 'src/**/*.test.ts'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mia-platform/console-mcp-server.git"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/mia-platform/console-mcp-server/issues"
  },
  "homepage": "https://github.com/mia-platform/console-mcp-server#readme",
  "dependencies": {
    "@mia-platform/console-types": "^0.37.4",
    "@modelcontextprotocol/sdk": "^1.11.4",
    "commander": "^13.1.0",
    "fastify": "^5.3.3",
    "undici": "^7.9.0",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.24.0",
    "@stylistic/eslint-plugin-js": "^4.2.0",
    "@types/node": "^22.15.19",
    "c8": "^10.1.3",
    "eslint": "^9.27.0",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1"
  }
}
